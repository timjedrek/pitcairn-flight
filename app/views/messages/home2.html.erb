            <a href="tel:610-495-7000">(610) 495-7000</a><br>
          </div>
        </div>
        
        <div class="flex flex-row">
          <div class="">
            <%= image_tag "email.webp", class: "h-7 max-w-min", alt: "email icon"%>
          </div>
          <div class="ml-5 p-text">
            <a href="mailto:flynow@pitcairnflight.com">flynow@pitcairnflight.com</a>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:w-1/2 flex flex-col items-center">
